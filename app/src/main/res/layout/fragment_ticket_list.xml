<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.TicketListFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_home" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvTripContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginStart="60sp"
        android:layout_marginTop="24sp"
        android:layout_marginEnd="60sp"
        android:padding="4sp"
        app:cardCornerRadius="32sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="150sp"
                android:layout_height="40sp"
                android:layout_alignParentStart="true"
                android:padding="8sp"
                app:cardBackgroundColor="@color/main_blue"
                app:cardCornerRadius="32sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/label_on_going"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvPast"
                android:layout_width="150sp"
                android:layout_height="40sp"
                android:layout_alignParentEnd="true"
                android:padding="8sp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="32sp"
                app:cardElevation="0sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/label_past"
                    android:textColor="@color/content_grey"
                    android:textSize="12sp" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cvTripContainer">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvListTicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16sp"
            android:layout_marginTop="10sp"
            android:layout_above="@id/progressBar" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="12sp"
            android:visibility="gone" />
    </RelativeLayout>

    <com.github.ybq.android.spinkit.SpinKitView
        style="@style/SpinKitView.Large.ThreeBounce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="200sp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        app:SpinKit_Color="@color/main_blue" />
</RelativeLayout>